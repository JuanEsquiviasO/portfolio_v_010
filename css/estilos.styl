@import "nib"
@import "slider.styl"
@import "fonts.styl"
  
  body
    background #222222

 .u-title
  border-bottom 2px solid #f25622
  color #f25622
  font-weight normal
  font-size 1.5em
  padding-bottom 0.5em
  text-align center

.u-containerDefault
  max-width 800px
  margin 0 auto

.MainMenu
  background #1e1e1e
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0
  z-index 3

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #f25622
  text-decoration none
  line-height 3.75em
  margin-right 1.5em

.Header
  margin-top 3.75em
  background-image url("../images/portada.png")
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 1.2em 0
  &-button
    background white
    border none
    border-radius 50%
    height 40px
    line-height 40px
    position fixed
    right 1em
    top 1em
    width 40px
    z-index 3
    outline 0
    display none
    &.is-active
      display block
      
.Header-imageContainer
  margin 0

.Header-image
  border 5px solid #fff
  border-radius 50%

.Header-name,
.Header-link
  color #fff

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.Profile
  text-align center
  padding 0 1em
  
.Profile-description
  color white

.Profile-link
  background #ffa500
  border-radius 2em
  color #fff
  margin-right 0.5em
  padding 0.5em 1em
  text-decoration none
  display: inline-block
  margin-bottom 1em
  &.twitter
    background #55acee
  &.linkedin
    background #0077b5
  &.github  
    background #171515
  &:before
    margin-right .5em

.Work
  margin-top 2em
  text-align center
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  margin-bottom 1.8em

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.1em
  color #515151
  font-style italic

.Footer
  background-color #1e1e1e
  background-repeat no-repeat
  background-position center
  image('../images/footer-grayje.png', w=1024px, h=343px)
  padding 2em 0
  text-align center

.Footer-form
  text-align center
  display inline-block

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-title
  color #f25622
  
.Footer-description
  color white
  text-decoration none
  
.Footer-formInput,
.Footer-textarea
  background #fff
  border none
  display block
  border-radius 2em
  padding 0.5em
  margin 0 auto 1em
  outline 0

.Footer-textarea
  resize none

.Footer-button
  background #f25622
  border-radius 1em
  border none
  color #fff
  padding .5em 1em

.Footer-register
  color white
  text-decoration none

.Slider
  background black
  &-container
    max-width 1024px
    margin 0 auto  


@media screen and (max-width: 480px)
  .Profile
    &-link
      display block
      

@media screen and (max-width: 767px)
  .Footer
    &-form
      display block
    &-formInput
    &-textarea
      width 90%
      box-sizing border-box
  
  .Header
    margin-top 0
  
  .MainMenu
    height auto 
    left -200px
    width 200px
    transition .3s
    &.is-active
      left 0
    &-item
      display block